{
  "compilerOptions": {
    "target": "es2019",
    "moduleResolution": "node",
    "sourceMap": true,
    "incremental": true,
    "composite": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "baseUrl": ".",
    "rootDir": "./modules",
    "outDir": "./dist",
    "resolveJsonModule": true,

    "noImplicitAny": false,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,

    "paths": {
      "#utils": ["./modules/utils/index.ts"],
      "#db": ["./modules/db/index.ts"],

      "#client/core": ["./modules/client/core/index.ts"],
      "#client/utils": ["./modules/client/utils/index.ts"],

      "#server/core": ["./modules/server/core/index.ts"],
      "#server/utils": ["./modules/server/utils/index.ts"],

      "#services/bugzilla/client": [
        "./modules/services/bugzilla/client/index.tsx"
      ],
      "#services/bugzilla/server": [
        "./modules/services/bugzilla/server/index.ts"
      ],
      "#services/bugzilla/schema": [
        "./modules/services/bugzilla/schema/index.ts"
      ],

      "#services/jira/client": ["./modules/services/jira/client/index.tsx"],
      "#services/jira/server": ["./modules/services/jira/server/index.ts"],
      "#services/jira/schema": ["./modules/services/jira/schema/index.ts"],

      "#services/google/client": ["./modules/services/google/client/index.tsx"],
      "#services/google/server": ["./modules/services/google/server/index.ts"],
      "#services/google/schema": ["./modules/services/google/schema/index.ts"],

      "#services/phabricator/client": [
        "./modules/services/phabricator/client/index.tsx"
      ],
      "#services/phabricator/server": [
        "./modules/services/phabricator/server/index.ts"
      ],
      "#services/phabricator/schema": [
        "./modules/services/phabricator/schema/index.ts"
      ],

      "#services/github/client": ["./modules/services/github/client/index.tsx"],
      "#services/github/server": ["./modules/services/github/server/index.ts"],
      "#services/github/schema": ["./modules/services/github/schema/index.ts"]
    }
  },
  "exclude": ["**/tsconfig.json"]
}
