{
  "compilerOptions": {
    "target": "es2019",
    "moduleResolution": "node",
    "sourceMap": true,
    "incremental": true,
    "composite": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "./dist",

    "paths": {
      "#ui": ["./core/ui/index.ts"],
      "#utils": ["./core/utils/index.ts"],
      "#schema": ["./core/schema/index.ts"],
    },

    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
  }
}
