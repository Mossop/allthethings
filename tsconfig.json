{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "allowJs": true,
    "noEmit": true,
  },
  "include": [
    "packages/*/*.js",
    "packages/*/.*.js",
    "plugins/*/server/*.js",
    "plugins/*/server/.*.js",
    "plugins/*/client/*.js",
    "plugins/*/client/.*.js",
    "*.js",
    ".*.js"
  ]
}
