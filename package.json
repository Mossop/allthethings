{
  "name": "@allthethings/root",
  "private": true,
  "description": "AllTheThings project tracker.",
  "repository": "Mossop/allthethings",
  "license": "MIT",
  "author": "Dave Townsend <dtownsend@oxymoronical.com>",
  "scripts": {
    "clean": "lerna run clean",
    "build-schema": "lerna run build-schema",
    "build": "lerna run build-schema && lerna run build",
    "watch": "yarn build && lerna run --parallel watch",
    "start": "cd packages/server && yarn start ../../testing/config.json",
    "jslint": "eslint .",
    "lint": "yarn jslint && lerna run lint"
  },
  "workspaces": [
    "packages/*",
    "plugins/*/server",
    "plugins/*/client"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.18.0",
    "eslint-import-resolver-ts": "^0.4.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mossop": "github:Mossop/eslint-plugin-mossop#1.0.12",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "lerna": "^4.0.0",
    "typescript": "^4.2.0"
  }
}
